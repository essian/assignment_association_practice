<%= form_for(post) do |f| %>
  <%= f.label("title") %><br>
  <%= f.text_field(:title)  %><br>
  <%= f.label("body") %><br>
  <%= f.text_field(:body) %><br>
  <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) %><br>
  <%= f.collection_radio_buttons(:category_id, Category.all, :id, :name) %>
<%= f.submit %>
    
<% end %>