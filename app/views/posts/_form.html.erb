<%= form_for(post) do |f| %>
<% @category_options = Category.all.map { |c| [c.name, c.id]} %>
  <%= f.label("title") %><br>
  <%= f.text_field(:title)  %><br>
  <%= f.label("body") %><br>
  <%= f.text_field(:body) %><br>
  <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) %><br>
  <%= f.collection_radio_buttons(:category_id, Category.all, :id, :name) %><br>
  <%= f.collection_select(:category_id, Category.all, :id, :name) %><br>
  <%= select_tag(:category_id, options_for_select(@category_options, @post.category_id)) %><br>
<%= f.submit %>
    
<% end %>